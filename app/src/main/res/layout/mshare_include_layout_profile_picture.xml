<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/icon_size_list_giant"
    android:layout_height="@dimen/icon_size_list_giant"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/mshare_layout_profile_picture_image_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/msWhite" />

    <ImageView
        android:id="@+id/mshare_layout_profile_picture_image_preferred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?roundSelector" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|bottom"
        android:background="@drawable/mshare_edit_round_background"
        android:padding="3dp"
        app:srcCompat="@drawable/mshare_edit_white"
        app:tint="@android:color/white" />

</FrameLayout>